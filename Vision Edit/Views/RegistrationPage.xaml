<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vision_Edit.Views.RegistrationPage"
             Title="Register">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="14">

            <Label Text="Create account"
                   FontSize="24"
                   FontAttributes="Bold" />

            <Label Text="Fill in your details to register."
                   FontSize="14"
                   Opacity="0.7" />

            <BoxView HeightRequest="1" Opacity="0.15" />

            <!-- Username -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Username" FontAttributes="Bold" />
                <Entry Placeholder="e.g. clanker_slayer"
                       Text="{Binding Username}"
                       ClearButtonVisibility="WhileEditing"
                       ReturnType="Next" />
            </VerticalStackLayout>

            <!-- First name -->
            <VerticalStackLayout Spacing="6">
                <Label Text="First name" FontAttributes="Bold" />
                <Entry Placeholder="Your first name"
                       Text="{Binding FirstName}"
                       ClearButtonVisibility="WhileEditing"
                       ReturnType="Next" />
            </VerticalStackLayout>

            <!-- Last name -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Last name" FontAttributes="Bold" />
                <Entry Placeholder="Your last name"
                       Text="{Binding LastName}"
                       ClearButtonVisibility="WhileEditing"
                       ReturnType="Next" />
            </VerticalStackLayout>

            <!-- Email -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Email" FontAttributes="Bold" />
                <Entry Placeholder="name@example.com"
                       Text="{Binding Email}"
                       Keyboard="Email"
                       ClearButtonVisibility="WhileEditing"
                       ReturnType="Next" />
            </VerticalStackLayout>

            <!-- Password -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Password" FontAttributes="Bold" />
                <Entry Placeholder="••••••••"
                       Text="{Binding Password}"
                       IsPassword="True"
                       ClearButtonVisibility="WhileEditing"
                       ReturnType="Done" />
            </VerticalStackLayout>

            <Button Text="Register"
                    Command="{Binding RegisterCommand}"
                    Margin="0,10,0,0" />

            <Button Text="Back to main page"
                    Command="{Binding SwitchToMainPageCommand}"
                    Opacity="0.85" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>